
@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        IntelligentAI
        <FluentSpacer />
            <div class="links">
                <FluentAnchor Appearance="Appearance.Hypertext" Style="margin-right: 32px;"
                          Href="https://github.com/ych98/IntelligentAI" Target="_blank" Rel="noreferrer noopener"
                          title="IntelligentAI library source on GitHub" aria-label="IntelligentAI library source on GitHub">
                <FluentIcon Value="@(new GitHubIcon())" Color="Color.FillInverse" />
                </FluentAnchor>
            </div>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Microsoft.FluentUI.AspNetCore.Components.Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
        <FluentToastProvider MaxToastCount="10" />
        <FluentDialogProvider />
        <FluentTooltipProvider />
        <FluentMessageBarProvider />
    </FluentStack>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

