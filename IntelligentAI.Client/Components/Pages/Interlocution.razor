@page "/interlocution"

<h1>Interlocution</h1>

<Fanews.IntelligentAggregation.Components.Arguments OnAnswerReceived="RefreshAnswerAsync" />

<FluentSwitch @bind-Value="@_displayMode" CheckedMessage="Text" UncheckedMessage="Markdown">DisplayMode:</FluentSwitch>

<Fanews.IntelligentAggregation.Components.MarkdownSection DisplayMode="@_displayMode" Content="@_botAnswer" />
<FluentToastProvider />
@code {
    private bool _displayMode = false;

    private string _botAnswer;

    private async Task RefreshAnswerAsync(string answer)
    {
        _botAnswer = answer;
        await InvokeAsync(StateHasChanged);
    }
}
